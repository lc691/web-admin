{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (Uvicorn Dev)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "env": {
        "ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
