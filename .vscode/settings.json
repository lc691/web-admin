{
    // ================================
    // üêç PYTHON ENVIRONMENT
    // ================================
    "python.defaultInterpreterPath": "C:\\Users\\ANGGAR WULAN\\AppData\\Local\\Programs\\Python\\Python311\\python.exe",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "off", // "strict" kalau ingin lebih ketat
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.importFormat": "absolute",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/src"
    ],
    // Pylance otomatis melakukan indexing, tidak perlu "python.analysis.indexing"
    // ================================
    // üßπ FORMATTER (Black + isort)
    // ================================
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always",
        "source.fixAll": "explicit"
    },
    "python.formatting.provider": "black",
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    "isort.args": [
        "--profile",
        "black",
        "--line-length",
        "100"
    ],
    // ================================
    // ü™∂ LINTING (pylint + flake8 optional)
    // ================================
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "pylint.args": [
        "--disable=C0114,C0115,C0116", // matikan docstring warning
        "--max-line-length=100"
    ],
    // ================================
    // üíª TERMINAL
    // ================================
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoExit",
                "-Command",
                "if (Test-Path .venv/Scripts/Activate.ps1) { . .venv/Scripts/Activate.ps1 }"
            ]
        }
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 8000,
    // ================================
    // üíæ AUTO SAVE
    // ================================
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1500,
    // ================================
    // üåô UI & EDITOR ENHANCEMENTS
    // ================================
    "workbench.colorTheme": "Ubuntu Color VSCode Deep Dark",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "JetBrains Mono, Fira Code, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 22,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.renderWhitespace": "boundary",
    "editor.renderLineHighlight": "all",
    "editor.stickyScroll.enabled": true,
    "editor.inlineSuggest.enabled": true, // seperti GitHub Copilot mini
    "editor.quickSuggestions": {
        "strings": true
    },
    "window.zoomLevel": 0,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // ================================
    // üé® HIGHLIGHT CUSTOMIZATIONS
    // ================================
    "editor.semanticHighlighting.enabled": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "keyword.control.import.python",
                "settings": {
                    "foreground": "#FFCB6B",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "variable.parameter.function.language.special.self.python",
                "settings": {
                    "foreground": "#82AAFF"
                }
            },
            {
                "scope": "string.quoted.double.python",
                "settings": {
                    "foreground": "#C3E88D"
                }
            }
        ]
    },
    // ================================
    // üß† PRODUCTIVITY
    // ================================
    "breadcrumbs.enabled": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.venv": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/.pytest_cache": true
    },
    "notebook.output.textLineLimit": 1000,
    // ================================
    // üë©‚Äçüíª CODE STYLE
    // ================================
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    // ================================
    // ü™Ñ INTELLISENSE & AUTOCOMPLETE
    // ================================
    "python.autoComplete.addBrackets": true,
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}"
    ],
    "python.analysis.stubPaths": [
        "typings"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // ================================
    // ‚ö° PERFORMANCE & INDEXING
    // ================================
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.memory.keepParsedCode": false,
    // ================================
    // üß© MISC
    // ================================
    "workbench.startupEditor": "none",
    "workbench.editor.closeOnFileDelete": true,
    "debug.console.fontFamily": "JetBrains Mono",
    "debug.console.fontSize": 13
}